{
  "name": "zoomiverse-ai",
  "displayName": "Zoomiverse",
  "description": "AI Chat Client",
  "version": "0.1.2",
  "icon": "icons/Bolt.png",
  "publisher": "ZoomApps",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulfisher53/zoomiverse-ai.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Zoomiverse AI Settings",
      "properties": {
        "zoomiverse-ai.ollamaModel": {
          "type": "string",
          "default": "deepseek-r1:1.5b",
          "description": "The ai model name to use for chat responses."
        }
      }
    },
    "commands": [
      {
        "command": "zoomiverse-ai.start",
        "title": "Zoomiverse: Start Chat"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "marked": "^15.0.6",
    "ollama": "^0.5.12"
  }
}
